{
  "name": "black-hat-tests",
  "version": "1.0.0",
  "description": "Testes unit√°rios para o jogo Black Hat",
  "main": "index.js",
  "scripts": {
    "test": "node tests/dataCenterPC/dataCenterPC.simple.test.js",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/black-hat/src/$1"
    },
    "collectCoverageFrom": [
      "black-hat/src/**/*.js",
      "!black-hat/src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "keywords": ["testing", "unit-tests", "phaser", "javascript", "game"],
  "author": "Black Hat Tests Team",
  "license": "MIT"
} 